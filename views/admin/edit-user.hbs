<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit User</h2>
                <form action="/admin/edit-user/{{user._id}}" method="post" enctype="multipart/form-data"> 
                    <label for="">Name</label>
                    <input type="text" name="name" class="form-control" placeholder="Your new name" value="{{user.name}}">
                    
                    <label for="">Email</label>
                    <input type="text" name="email" class="form-control" placeholder="Your new email" value="{{user.email}}">
                    
                    <button type="submit" class="btn btn-success mt-4">submit</button>
                </form>

            </div>
        </div>
    </div>
</section>